<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F9F9F9">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/schoolyy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:fontFamily="@font/montserratblack"
        android:textColor="@color/app_color"
        android:textSize="24sp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="40dp"/>


    <TextView
        android:id="@+id/helloostev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/startregtext"
        android:layout_below="@+id/schoolyy"
        android:fontFamily="@font/montserratblack"
        android:textColor="@color/app_color"
        android:textSize="12sp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="56dp"/>

    <TextView
        android:id="@+id/textreglong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="8sp"
        android:textColor="@color/greysteve"
        android:fontFamily="@font/montserratblack"
        android:layout_below="@+id/helloostev"
        android:layout_marginStart="56dp"
        android:text="Пройди несколько простых \nшагов регистрации. Или ты\nможешь использовать свой\nаккаунт в Google Play"/>


    <ImageView
        android:id="@+id/steve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/steve"
        android:layout_toRightOf="@+id/textreglong"
        android:layout_marginStart="-80dp"
        android:layout_marginTop="-50dp"/>

        <RelativeLayout
            android:id="@+id/relativenick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/steve"
            android:layout_marginTop="-110dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/corners30dp">

            <TextView
                android:id="@+id/goone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Шаг 1"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/app_color"
                android:textSize="36sp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Введи свой никнейм"
                android:layout_below="@id/goone"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/greysteve"
                android:textSize="12sp"
                android:layout_marginStart="25dp"/>

            <EditText
                android:id="@+id/egitnick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nick"
                android:background="@drawable/corners5nickreg"
                android:textSize="14sp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/montserrat_bold"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativenick"
            android:layout_marginTop="42dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/corners30dp">

            <TextView
                android:id="@+id/gotwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Шаг 2"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/app_color"
                android:textSize="36sp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Укажи свой номер телефона"
                android:layout_below="@id/gotwo"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/greysteve"
                android:textSize="12sp"
                android:layout_marginStart="25dp"/>

            <EditText
                android:id="@+id/editphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:background="@drawable/corners5nickreg"
                android:textSize="14sp"
                android:inputType="phone"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/montserrat_bold"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativephone"
            android:layout_marginTop="42dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/corners30dp">

            <TextView
                android:id="@+id/gothree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Шаг 3"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/app_color"
                android:textSize="36sp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Придумай пароль"
                android:layout_below="@id/gothree"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/greysteve"
                android:textSize="12sp"
                android:layout_marginStart="25dp"/>

            <EditText
                android:id="@+id/editpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/password"
                android:background="@drawable/corners5nickreg"
                android:textSize="14sp"
                android:inputType="textPassword"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"
                android:fontFamily="@font/montserrat_bold"/>


        </RelativeLayout>

    </RelativeLayout>

    </ScrollView>

</LinearLayout>